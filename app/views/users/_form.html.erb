<div class="container w-1/3 mx-auto bg-slate-50 p-12 rounded-md shadow-lg">
  <h1 class="text-2xl font-bold text-center mb-5"><%= title %></h1>
  <%= form_with model: user do |form| %>
    <%= render "error" %>
    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :username %>
      </div>
      <div>
        <%= form.text_field :username, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :email %>
      </div>
      <div>
        <%= form.email_field :email, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :password %>
      </div>
      <div>
        <%= form.password_field :password, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :password_confirmation %>
      </div>
      <div>
        <%= form.password_field :password_confirmation, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :first_name %>
      </div>
      <div>
        <%= form.text_field :firstname, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :last_name %>
      </div>
      <div>
        <%= form.text_field :lastname, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :phone_number %>
      </div>
      <div>
        <%= form.telephone_field :phonenumber, class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md" %>
      </div>
    </div>

    <div id="file-field" class="py-3 grid grid-cols-3 justify-start">
      <div class="text-lg max-w-fit font-serif">
        <%= form.label :avatar %>
      </div>
      <div>
        <%= form.file_field :avatar, direct_upload: true, accept: 'image/png,image/gif,image/jpeg', class: "h-9 rounded-lg bg-sky-50 border-blue-300 border-2 focus:bg-sky-100 focus:ring-0 shadow-md w-72" %>
      </div>
    </div>

    <div class="mt-3 max-w-fit mx-auto">
      <%= form.button type: "submit", class: "bg-green-400 p-2 text-sm rounded-lg hover:bg-green-500 text-gray-50" %>
      <%= link_to "Cancel", users_path, class: "bg-green-400 p-2 text-md rounded-lg hover:bg-green-500 text-gray-50" %>
    </div>
  <% end %>
</div>
